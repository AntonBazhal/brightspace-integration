{
  "name": "brightspace-integration",
  "version": "10.5.6",
  "description": "Integration project for components consumed by Brightspace.",
  "private": true,
  "main": "js/index.js",
  "scripts": {
    "autoprefix": "postcss -c postcss.config.json",
    "build": "npm run build:wc && npm run build:js && npm run build:sass && npm run build:icons",
    "build:js": "rollup -c ./rollup/rollup.config.js -o ./build/bsi.js -- ./js/index.js",
    "postbuild:js": "npm run uglify:js",
    "build:sass": "node-sass --output-style expanded ./sass/bsi.scss ./build/bsi.css",
    "postbuild:sass": "npm run autoprefix && npm run uglify:css",
    "build:icons": "cpy ./bower_components/vui-icons/images/**/*.png ./build/images",
    "build:wc": "polymer build",
    "postbuild:wc": "npm run jsonpify-imports",
    "postinstall": "polymer install",
    "lint": "npm run lint:js && npm run lint:html",
    "lint:html": "eslint web-components/*.html",
    "lint:js": "eslint *.js js/** rollup/**",
    "publish:cdn": "frau-publisher -m lib -t bsi -f './build/**/*' -k AKIAIZGPQIRSA2WEJEDA --secretvar CDN_SECRET --versionvar TRAVIS_TAG",
    "preserve": "npm run build",
    "serve": "http-server build --cors",
    "test": "npm run lint && npm run validate-deps",
    "uglify:css": "cleancss -s ./build/bsi.css -o ./build/bsi.min.css -c",
    "uglify:js": "uglifyjs ./build/bsi.js --compress --mangle --source-map \"content='build/bsi.js.map',url='bsi.min.js.map'\" -o ./build/bsi.min.js",
    "jsonpify-imports": "node jsonp-imports.js \"./build/**/*.html\"",
    "validate-deps": "bower-locker validate"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/brightspace-integration.git"
  },
  "keywords": [],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Brightspace/brightspace-integration/issues"
  },
  "homepage": "https://github.com/Brightspace/brightspace-integration",
  "devDependencies": {
    "autoprefixer": "^6.4.2",
    "bower-locker": "^1.0.7",
    "clean-css": "^3.4.28",
    "cpy": "^3.4.1",
    "d2l-intl": "^0.3.1",
    "eslint": "^4.19.1",
    "eslint-config-brightspace": "^0.4.0",
    "eslint-plugin-html": "^4.0.2",
    "frau-publisher": "^2.5.3",
    "http-server": "^0.9.0",
    "lie": "^3.3.0",
    "merge-stream": "^1.0.1",
    "node-sass": "^4.8.3",
    "polymer-cli": "^1.6.0",
    "postcss-cli": "^2.6.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.56.5",
    "rollup-plugin-commonjs": "^9.0.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "uglify-js": "^3.3.18"
  }
}
